<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controllers.SignUp"
    android:layout_margin="25dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="25dp"
        app:srcCompat="@drawable/logoo" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/email"
        android:minHeight="48dp" />


    <TextView
        android:id="@+id/emailError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red_error"
        android:text="Email field cannot be empty"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="Username"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/user"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/usernameError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red_error"
        android:text="Username field cannot be empty"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/lock"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/passwordError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red_error"
        android:text="Password field cannot be empty"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/etRePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="Retype password"
        android:drawableLeft="@drawable/lock"
        android:inputType="textPassword"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/rePasswordError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red_error"
        android:text="Password field cannot be empty"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/passwordDiffError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red_error"
        android:text="Password is not the same"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/gray1"/>
</LinearLayout>